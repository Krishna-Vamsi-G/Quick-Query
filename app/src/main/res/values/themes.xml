<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.QuickQuery" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <!-- Other customizations -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.QuickQuery" parent="Base.Theme.QuickQuery">
        <!-- Theme customizations -->
    </style>
    <style name="HintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="EditTextThemeOverlay" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/black</item>
    </style>


    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
    <style name="outline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded
        </item>
        <item name="boxStrokeWidth">1dp</item>
    </style>
    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>


</resources>
